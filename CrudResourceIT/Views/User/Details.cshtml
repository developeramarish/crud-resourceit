
@model CrudResourceIT.Domain.Entities.User

@{
	ViewBag.Title = "Detalhes do usuário";
}

<h2>Detalhes do Usuário</h2>

<div>
	<dl class="dl-horizontal">
		<dt>
			Nome
		</dt>

		<dd>
			@Html.DisplayFor(model => model.FirstName)
		</dd>

		<dt>
			Sobrenome
		</dt>

		<dd>
			@Html.DisplayFor(model => model.LastName)
		</dd>

		<dt>
			Email
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Email)
		</dd>
		<dt>
			Endereço
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Detail.Address)
		</dd>
		<dt>
			Telefone
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Detail.Phone)
		</dd>
	</dl>
</div>
<p>
	@Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
	@Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary" })
</p>

