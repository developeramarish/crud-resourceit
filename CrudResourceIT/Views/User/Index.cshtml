@model IEnumerable<CrudResourceIT.Domain.Entities.User>
@{
	/**/

	ViewBag.Title = "Index";
}
<script src="~/Scripts/app/delete.js"></script>
<br />
<br />
<p>
	@Html.ActionLink("Criar Usuário", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
	<tr>
		<th>
			Nome
		</th>
		<th>
			Sobrenome
		</th>
		<th>
			Email
		</th>
		<th>
			Endereço
		</th>
		<th>
			Telefone
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.FirstName)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.LastName)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Email)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Detail.Address)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Detail.Phone)
		</td>
		<td>
			@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) 
			@Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-primary" }) 
			<button  class="btn btn-danger" onclick="excluir('@item.Id')">Delete</button>
		</td>
	</tr>
	}
</table>

